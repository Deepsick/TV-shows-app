.Filters__list
    padding 0
    margin 30px 0
    margin-bottom 50px
    display flex
    flex-direction row
    justify-content space-between
    align-items flex-start
    list-style none

/* Reset Select */
.Filters__select 
  appearance: none
  outline: 0
  box-shadow: none
  border: 0
  background-image: none
  position: relative
  display: block
  width: 20em
  height: 3em
  line-height: 3
  background: #fff  
  overflow: hidden
  border: 1px solid #d0d0d0
  width: 100%
  height: 100%
  margin: 0
  margin-top 10px
  padding: 0 0 0 .5em
  color: #000
  cursor: pointer
  &::-ms-expand 
    display: none
.Filters__item
    position relative
    padding 0
    margin 0
    width 300px
    &::after 
        content: '\25BC'
        position: absolute
        right: 0
        bottom: 0
        height 39px
        border-bottom: 1px solid #d0d0d0
        border-right: 1px solid #d0d0d0
        display flex
        justify-content flex-end
        align-items center
        color #000000
        padding-right 10px
        background: #ffffff
        pointer-events: none
        transition: .25s all ease
    &:hover::after 
        color: #f39c12 


