.Filters__list
    padding 0
    margin 30px 0
    margin-bottom 50px
    display flex
    flex-direction row
    justify-content space-between
    align-items flex-start
    list-style none

/* Reset Select */
.Filters__select 
  appearance none
  outline 0
  box-shadow none
  border 0
  background-image none
  position relative
  display block
  width 300px
  height 50px
  line-height 3
  background  #fff  
  overflow hidden
  border 1px solid border-color
  width 100%
  height 100%
  margin 0
  margin-top 10px
  padding-left 10px
  color #000
  cursor pointer
  &::-ms-expand 
    display none
.Filters__item
    position relative
    padding 0
    margin 0
    width 305px
    &::after 
        content '\25BC'
        position absolute
        right 0
        bottom 0
        height 48px
        border-bottom 1px solid border-color
        border-right 1px solid border-color
        display flex
        justify-content flex-end
        align-items center
        color text-color
        padding-right 10px
        background-color background-color
        pointer-events none
        transition 0.25s all ease
    &:hover::after 
        color: #f39c12 


