.SearchField
    width 45%
    display flex
    height: 50px
.SearchField__input
    height 100%
    width 100%
    padding-left 10px
.back-button
    position relative
    display block
    padding-left 30px
    margin-bottom 20px
    text-decoration none
    color text-color
    &::after
        content ''
        position absolute
        top 0
        left 0
        bottom 0
        width 20px
        background-image url("./assets/previous-page-icon.svg")
        background-repeat no-repeat
        background-position 0 0
        background-size contain
    &:hover
        color lighten(text-color, 30%)
        &::after
            background-image url('./assets/back-button-hover.svg')


@media(max-width: desktop-width)
    .SearchField
        width 100%



